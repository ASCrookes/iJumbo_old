<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" 
    android:background="@drawable/background" >

    <ImageButton
        android:id="@+id/newsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="30dp"
        android:background="@null"
        android:onClick="getNews"
        android:src="@drawable/news" />

    <ImageButton
        android:id="@+id/mapButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="33dp"
        android:layout_marginTop="30dp"
        android:background="@null"
        android:onClick="getMap"
        android:src="@drawable/map" />

    <ImageButton
        android:id="@+id/linksButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/webpage"
        android:onClick="getLinks"
        android:background="@null" />

    <ImageButton
        android:id="@+id/eventsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="35dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/events"
        android:onClick="getEvents"
        android:background="@null" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignLeft="@+id/mapButton"
        android:layout_alignRight="@+id/mapButton"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="10dp"
        android:text="Map/Places" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/textView1"
        android:layout_alignRight="@id/textView1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:text="Events"
        android:textColor="#FFFFFF"
        android:textSize="10dp" />
    
    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/textView6"
        android:layout_alignBottom="@id/textView6"
        android:layout_alignLeft="@id/textView2"
        android:layout_alignRight="@id/textView2"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="10dp"
        android:text="Links" />

    <ImageButton
        android:id="@+id/joeyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linksButton"
        android:layout_centerVertical="true"
        android:background="@null"
        android:onClick="getJoey"
        android:src="@drawable/bus" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/textView1"
        android:layout_alignRight="@id/textView1"
        android:layout_below="@+id/joeyButton"
        android:gravity="center"
        android:text="Menus"
        android:textColor="#FFFFFF"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@id/textView2"
        android:layout_alignRight="@id/textView2"
        android:gravity="center"
        android:text="Transportation"
        android:textColor="#FFFFFF"
        android:textSize="10dp" />


    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/newsButton"
        android:layout_alignRight="@+id/newsButton"
        android:layout_below="@+id/mapButton"
        android:gravity="center"
        android:text="News"
        android:textColor="#FFFFFF"
        android:textSize="10dp" />

    <ImageButton
        android:id="@+id/menuButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:background="@null"
        android:onClick="getMenu"
        android:src="@drawable/burger" />
          
</RelativeLayout>