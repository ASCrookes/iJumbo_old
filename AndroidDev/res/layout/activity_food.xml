<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FoodActivity" 
    android:background="@drawable/background" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:lines="1"
        android:textColor="#FFFFFF"
        android:text="Serving Size:" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="5dp"
        android:lines="1"
        android:textColor="#FFFFFF"
        android:text="Calories:" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/TextView01"
        android:layout_marginLeft="5dp"
        android:lines="1"
        android:textColor="#FFFFFF"
        android:text="Fat Calories:" />

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/TextView02"
        android:layout_marginLeft="5dp"
        android:lines="1"
        android:textColor="#FFFFFF"
        android:text="Sat Fat:" />

    <TextView
        android:id="@+id/TextView05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/TextView03"
        android:layout_marginLeft="5dp"
        android:lines="1"
        android:textColor="#FFFFFF"
        android:text="Cholestoral:" />

    <TextView
        android:id="@+id/TextView04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/TextView05"
        android:layout_marginLeft="5dp"
        android:lines="1"
        android:textColor="#FFFFFF"
        android:text="Sodium:" />

    <TextView
        android:id="@+id/TextView08"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/TextView04"
        android:layout_marginLeft="5dp"
        android:lines="1"
        android:textColor="#FFFFFF"
        android:text="Total Carbs:" />

    <TextView
        android:id="@+id/TextView07"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/TextView08"
        android:layout_marginLeft="5dp"
        android:lines="1"
        android:textColor="#FFFFFF"
        android:text="Dietary Fiber:" />

    <TextView
        android:id="@+id/TextView06"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/TextView07"
        android:layout_marginLeft="5dp"
        android:lines="1"
        android:textColor="#FFFFFF"
        android:text="Sugars:" />

    <TextView
        android:id="@+id/TextView09"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/TextView06"
        android:layout_marginLeft="5dp"
        android:lines="1"
        android:textColor="#FFFFFF"
        android:text="Protein:" />

    <TextView
        android:id="@+id/TextView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/TextView09"
        android:layout_marginLeft="5dp"
        android:lines="1"
        android:textColor="#FFFFFF"
        android:text="Ingredients:" />

    <TextView
        android:id="@+id/calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TextView02"
        android:layout_alignLeft="@+id/servingSize"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:gravity="right"
        android:textColor="#FFFFFF"
        android:text="N/A" />

    <TextView
        android:id="@+id/servingSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TextView01"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:lines="1"
        android:gravity="right"
        android:textColor="#FFFFFF"
        android:text="N/A" />

    <TextView
        android:id="@+id/fatCalories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TextView03"
        android:layout_alignLeft="@+id/calories"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:lines="1"
        android:gravity="right"
        android:textColor="#FFFFFF"
        android:text="N/A" />

    <TextView
        android:id="@+id/satFat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TextView05"
        android:layout_alignLeft="@+id/fatCalories"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:lines="1"
        android:gravity="right"
        android:textColor="#FFFFFF"
        android:text="N/A" />

    <TextView
        android:id="@+id/cholestoral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TextView04"
        android:layout_alignLeft="@+id/satFat"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:lines="1"
        android:gravity="right"
        android:textColor="#FFFFFF"
        android:text="N/A" />

    <TextView
        android:id="@+id/sodium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TextView04"
        android:layout_alignBottom="@+id/TextView04"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:lines="1"
        android:gravity="right"
        android:textColor="#FFFFFF"
        android:text="N/A" />

    <TextView
        android:id="@+id/carbs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TextView07"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:lines="1"
        android:gravity="right"
        android:textColor="#FFFFFF"
        android:text="N/A" />

    <TextView
        android:id="@+id/fiber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TextView06"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:lines="1"
        android:gravity="right"
        android:textColor="#FFFFFF"
        android:text="N/A" />

    <TextView
        android:id="@+id/sugars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TextView09"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:lines="1"
        android:gravity="right"
        android:textColor="#FFFFFF"
        android:text="N/A" />

    <TextView
        android:id="@+id/protein"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TextView09"
        android:layout_alignBottom="@+id/TextView09"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:lines="1"
        android:gravity="right"
        android:textColor="#FFFFFF"
        android:text="N/A" />

    <TextView
        android:id="@+id/ingredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/TextView10"
        android:maxLines="20"
        android:scrollbars="vertical"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_text_view"
        android:text="TextView" />

</RelativeLayout>