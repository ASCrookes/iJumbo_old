
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="#996633"
        android:baselineAligned="false"
        android:fitsSystemWindows="false"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:onClick="onPlacesClick"
                android:scaleType="fitXY"
                android:src="@drawable/places" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:onClick="onTrunkClick"
                android:scaleType="fitXY"
                android:src="@drawable/trunk1" />

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:onClick="onEventsClick"
                android:scaleType="fitXY"
                android:src="@drawable/events1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:onClick="onJoeyClick"
                android:scaleType="fitXY"
                android:src="@drawable/joey1" />

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:onClick="onMenusClick"
                android:scaleType="fitXY"
                android:src="@drawable/menus1" />

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:onClick="onMapClick"
                android:scaleType="fitXY"
                android:src="@drawable/map1" />

        </LinearLayout>

    </LinearLayout>